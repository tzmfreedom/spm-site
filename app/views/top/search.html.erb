<div class="container contents">
  <h2><%= "#{@packages.total_count} packages found for '#{params[:q]}'" %></h2>
  <table class="row table table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Author</th>
    </tr>
    </thead>
    <tbody class="table-hover">
    <% @packages.each do |package| %>
      <tr data-href="<%= package_url(package) %>">
        <td class="span4"><%= package.name %></td>
        <td class="span6"><%= package.description %></td>
        <td class="span2"><%= package.author %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= paginate @packages %>
</div>
