<div class="container">
  <h2><%= "#{@packages.total_count} packages found for '#{params[:q]}'" %></h2>
  <table class="row table">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Author</th>
    </tr>
    <% @packages.each do |package| %>
      <tr>
        <td class="span4"><%= link_to package.name, package_url(package) %></td>
        <td class="span6"><%= package.description %></td>
        <td class="span2"><%= package.author %></td>
      </tr>
    <% end %>
  </table>
  <%= paginate @packages %>
</div>
