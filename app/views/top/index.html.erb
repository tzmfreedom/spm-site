<div style="background-color: darkblue;">
  <div class="container text-center" style="color: white;">
    <h1><strong>SPM - Salesforce Package Manager -</strong></h1>
    <div style="margin: 50px 300px;">
      <%= form_tag search_path, method: :get do |f| %>
        <div class="input-group">
          <%= text_field_tag :q, nil, class: 'form-control input-lg', placeholder: 'Search Salesforce Packages' %>
          <span class="input-group-btn">
            <button class="btn btn-default btn-lg" type="submit">
              <i class='glyphicon glyphicon-search'></i>
            </button>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div style="margin-top: 50px">
    <h2><strong>Install</strong></h2>
    <pre style="margin: 0px 300px"><code class="lang-shell">$ curl https://install.freedom-man.com/spm.sh | bash</code></pre>
  </div>
</div>
